---
export type Props = {
  cid: string;
  fieldType: string;
  name: string;
};

const { cid, fieldType, name } = Astro.props;
---

<div data-cid={cid} data-astro-component={fieldType} class="Field">
  <label for={cid}>{name}</label>
  <slot />
</div>

<style>
  .Field {
    align-items: center;
    display: flex;
    height: 40px;
    padding: 0 10px;
  }

  label {
    display: block;
    user-select: none;
    width: 200px;
  }
</style>

<style is:global>
  .vscode-light .Field:not(:last-child) {
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .vscode-dark .Field:not(:last-child) {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
</style>
